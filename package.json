{
  "name": "clownpack",
  "version": "0.0.0",
  "description": "A bundle build tool",
  "private": true,
  "keywords": [],
  "author": "Binbiubiubiu <2632003786@qq.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "rome ci . && prettier --check .",
    "format": "rome format --write . && prettier --write .",
    "clean": "rimraf --glob  .turbo ./node_modules/.cache/turbo ./packages/*/{.turbo,dist,coverage,*.lcov}",
    "play": "pnpm build && pnpm --filter=playground run clownpack ",
    "release": "pnpm build && changeset publish",
    "publish-packages": "pnpm build && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky install",
    "changeset": "changeset"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "rome check",
      "rome format --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.1.0",
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^18.15.8",
    "@types/resolve": "^1.20.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "rome": "^12.0.0",
    "turbo": "^1.8.3",
    "typescript": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Binbiubiubiu/clownpack.git"
  },
  "bugs": {
    "url": "https://github.com/Binbiubiubiu/clownpack/issues"
  },
  "homepage": "https://github.com/Binbiubiubiu/clownpack#readme"
}
